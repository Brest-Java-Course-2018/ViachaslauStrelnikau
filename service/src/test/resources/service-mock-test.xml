<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="departmentDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.dao.DepartmentDao"/>
    </bean>
    <bean name="employeeDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.dao.EmployeeDao"/>
    </bean>

    <bean id="departmentService" class="com.epam.brest.service.DepartmentServiceImpl">
<constructor-arg ref="departmentDao"/>

    </bean>
    <bean id="employeeService" class="com.epam.brest.service.EmployeeServiceImpl">
        <constructor-arg ref="employeeDao"/>
    </bean>

