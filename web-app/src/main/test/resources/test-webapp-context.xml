<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="MockdepartmentService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.client_rest.DepartmentConsumerRest"/>
    </bean>
    <bean id="MockemployeeService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.epam.brest.client_rest.EmployeeConsumerRest"/>
    </bean>

    <bean id="departmentController" class="com.epam.brest.web_app.controllers.DepartmentController" >
    </bean>

</beans>